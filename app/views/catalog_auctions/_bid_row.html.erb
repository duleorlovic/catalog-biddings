<%# bid
  - catalog_bidding
  - hidden
%>
<% hidden ||= false %>
<div class="message-item" <%=raw 'style="display:none"' if hidden %>>
  <div class="message-inner">
    <div class="message-head clearfix">
      <div class="message-icon pull-left"><a href="#"><i class="glyphicon glyphicon-check"></i></a></div>
      <div class="user-detail">
        <h5 class="handle"><%= catalog_bidding.offered_price %></h5>
        <div class="post-type">
          <p><%= catalog_bidding.user.email %></p>
        </div>
        <div class="post-time">
          <p><i class="glyphicon glyphicon-time"></i><abbr class="timeago" title="<%= catalog_bidding.offered_at.to_time.iso8601 %>"><%= catalog_bidding.offered_at.to_s :my_time %></abbr></p>
        </div>
      </div>
    </div>
    <div class="qa-message-content">
      <p>Admin created Blah Blah Blah, project, as part of the Campaign.</p>
    </div>
  </div>   
</div>  
<script>
  jQuery("abbr.timeago").timeago();
</script>
